@page "/autorization"
@using SeaHome.Services
@inject SingletonService singleton


<h3 >Autorization</h3>
<form>
  <div class="form-group mx-sm-2 mb-2">
    <label for="InputEmail1">Email address</label>
    <input type="email" class="form-control" id="InputEmail1" aria-describedby="emailHelp" @bind-value="Login" placeholder="Enter email">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group mx-sm-2 mb-2">
    <label for="InputPassword1">Password</label>
    <input type="password" class="form-control" id="InputPassword1" @bind-value="Password" placeholder="Password">
  </div><br/>
  @*<div class="form-check">
    <input type="checkbox" class="form-check-input" id="exampleCheck1">
    <label class="form-check-label" for="exampleCheck1">Check me out</label>
  </div>*@
  <a type="submit" class="btn btn-primary mx-sm-2 mb-2" @onclick="ToSignIn" href="account">Sign In</a><br/><br/>
 

  <!-- Button trigger modal -->
<button type="button" class="btn btn-success mx-sm-2" data-toggle="modal" data-target="#ModalCenter">
  Registration
</button>

<!-- Modal -->
<div class="modal fade" id="ModalCenter" tabindex="-1" role="dialog" aria-labelledby="ModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <Registration>

        </Registration>
      </div>
      @*<div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>*@
    </div>
  </div>
</div>

</form>


@code {
    private string Login;
    private string Password;
    
    private void ToSignIn()
    {
        if(!string.IsNullOrEmpty(Login))
        {
            if (!string.IsNullOrEmpty(Password))
            {
                singleton.currentUser = DBMethods.Authorization(Login, Password);
            }
        }
        
    }

}
